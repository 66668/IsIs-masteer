<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal"
        android:theme="@android:style/Theme.NoTitleBar">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/colorTheme">

            <Button
                android:id="@+id/button_back"
                android:layout_width="75.0dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mm_title_back_btn"
                android:text="返回"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/textview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button_back"
                android:layout_alignBottom="@+id/button_back"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="签到"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button_back"
                android:layout_alignBottom="@+id/button_back"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="验证码签到"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_hintinput"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="请输入验证码"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_inputCode"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/tv_hintinput"
            android:layout_below="@+id/tv_hintinput"
            android:layout_marginTop="10dp"
            android:background="@drawable/tv_code_style"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_textSize_default14"/>

        <Button
            android:id="@+id/btn_code"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/et_inputCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_login_style"
            android:text="签到"
            android:textColor="@color/colorTheme"
            android:textSize="@dimen/common_textSize_default18"/>

    </RelativeLayout>
</layout>